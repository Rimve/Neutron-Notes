    <ImageView
        android:id="@+id/date_line"
        android:layout_width="143dp"
        android:layout_height="1dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/notedateline"
        app:layout_constraintEnd_toEndOf="@+id/note_info_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/symbol_circle"
        app:layout_constraintTop_toTopOf="@+id/note_info_box" />

    <ImageView
        android:id="@+id/note_name_line"
        android:layout_width="298dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/notenameline"
        app:layout_constraintEnd_toEndOf="@+id/note_info_box"
        app:layout_constraintStart_toStartOf="@+id/note_info_box"
        app:layout_constraintTop_toBottomOf="@+id/symbol_circle" />

    <ImageView
        android:id="@+id/note_text_box"
        android:layout_width="300dp"
        android:layout_height="305dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/notetextarea"
        app:layout_constraintBottom_toBottomOf="@+id/note_info_box"
        app:layout_constraintEnd_toEndOf="@+id/note_info_box"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/note_info_box"
        app:layout_constraintTop_toTopOf="@+id/note_name_line" />

    <EditText
        android:background="@android:color/transparent"
        android:id="@+id/editText"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="date"
        android:hint="yyyy-mm-dd"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/date_line"
        app:layout_constraintRight_toRightOf="@id/date_line"
        app:layout_constraintStart_toEndOf="@+id/symbol_circle" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="Name the note :)"
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/note_name_line"
        app:layout_constraintEnd_toEndOf="@+id/note_name_line"
        app:layout_constraintStart_toStartOf="@+id/note_name_line" />


