    <ImageView
        android:id="@+id/note_info_box"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/noteinfobox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintVertical_bias="0.415" />

    <com.mikhaellopez.circularimageview.CircularImageView
        app:civ_border_width="2dp"
        app:civ_border_color="#B8B5B5"



        android:id="@+id/symbol_circle"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/symbolarea"
        app:layout_constraintStart_toStartOf="@+id/note_info_box"
        app:layout_constraintTop_toTopOf="@+id/note_info_box" />

